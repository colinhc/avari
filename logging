
_rcolor=$(tput sgr0)

logwarn() { _yellow=$(tput setaf 3); printf "%s\n" "$_yellow[warn] $* $_rcolor" | ts "%H:%M:%.S"; }
loginfo() { _green=$(tput setaf 2); printf "%s\n" "$_green[info] $* $_rcolor" | ts "%H:%M:%.S"; }
logerr() { _magenta=$(tput setaf 5); printf "%s\n" "$_magenta[err] $* $_rcolor" | ts "%H:%M:%.S"; }

